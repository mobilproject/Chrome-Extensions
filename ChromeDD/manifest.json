{
	"manifest_version": 2,
	"name": "IAUC List Making Tools",
	"short_name": "All in One tool to make lists with ease",
	"description": "Collection of all necessary plugins",
	"options_page": "options.html",
	"version": "6.2",
	
  "background": {
    "scripts": ["script/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script/jquery-3.2.1.js","modelSelect.js","addCarsToList.js","selectChassis.js","searchByLot.js","checkVin.js","oliacx.js"]
    }
  ],
  "browser_action": {
    "default_icon": "images/menu.png",
	"default_popup": "popup.html",
    "default_title": "List Making"
	
  },
  "permissions": ["tabs", "storage", "activeTab", "<all_urls>", "https://sayuri.co.jp/", "http://oliac.com/"],
  "externally_connectable": {
  "matches": ["*://*.iauc.co.jp/*", "https://sayuri.co.jp/", "http://oliac.com/"]
},
    
  "web_accessible_resources": [
    "images/*.png",
    "style/double-rainbow.css",
    "templates/*"
  ]
}